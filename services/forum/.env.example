# Discourse Forum Configuration
# Copy this file to .env and fill in your values

# Domain Configuration
DISCOURSE_HOSTNAME=forum.dolesewonderlandfx.me
DISCOURSE_DEVELOPER_EMAILS=admin@dolesewonderlandfx.me

# Database
POSTGRES_PASSWORD=your_secure_postgres_password_here

# SendGrid Email Configuration
SMTP_ADDRESS=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SENDGRID_API_KEY=your_sendgrid_api_key_here
SMTP_DOMAIN=dolesewonderlandfx.me

# CORS Configuration
CORS_ORIGIN=https://dolesewonderlandfx.me,https://app.dolesewonderlandfx.me

# AWS S3 Configuration (Optional - for file uploads)
USE_S3=true
AWS_REGION=us-east-1
S3_BUCKET=dolesewonderlandfx-forum
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# SSO Configuration (Optional - for single sign-on)
ENABLE_SSO=false
SSO_URL=https://app.dolesewonderlandfx.me/auth/sso
SSO_SECRET=your_sso_secret_key_here

# Performance
UNICORN_WORKERS=4
